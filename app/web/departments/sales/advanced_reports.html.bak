        function renderLateMembers(lateMembers) {
            const container = document.getElementById('lateMembers');
            
            if (!lateMembers || lateMembers.length === 0) {
                renderEmptyLateMembers();
                return;
            }
            
            container.innerHTML = lateMembers.map(member => `
                <div class="performer-item late-member">
                    <div class="performer-info">
                        <div class="performer-avatar">
                            ${getInitials(member.name || member.first_name, member.last_name)}
                        </div>
                        <div class="performer-details">
                            <h4>${member.name || `${member.first_name || ''} ${member.last_name || ''}`.trim() || 'Unknown'}</h4>
                            <p>Late by ${member.late_minutes || 0} minutes</p>
                        </div>
