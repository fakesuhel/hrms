    <script>
        // Global variables
        let currentUser = null;
        let reportData = {};
        let performanceChart = null;
        let teamMembers = [];
        
        document.addEventListener('DOMContentLoaded', async function() {
            console.log('Executive Reports page loading...');
            
            // Check authentication
            const token = localStorage.getItem('bhoomitechzone_token');
            if (!token) {
                console.log('No token found, redirecting to login');
                window.location.href = '/app/login';
                return;
            }
            
            try {
                // Initialize page
                await initializePage();
                
                // Setup event listeners
                setupEventListeners();
                
                // Set default date range
                setDefaultDateRange();
                
                // Load data
                await Promise.all([
                    loadReports(),
                    loadTeamMembers(),
                    loadTopPerformers(),
                    loadLateMembers()
                ]);
                
                console.log('Executive Reports page loaded successfully');
            } catch (error) {
                console.error('Error initializing executive reports page:', error);
                showToast('Error loading reports page', 'error');
            }
        });
        
        async function initializePage() {
            console.log('Initializing page...');
            
            try {
                // Load current user
                await loadCurrentUser();
                
                console.log('Page initialized successfully');
            } catch (error) {
                console.error('Error initializing page:', error);
                throw error;
            }
        }
        
        async function loadCurrentUser() {
            try {
                console.log('Loading current user...');
                const token = localStorage.getItem('bhoomitechzone_token');
                const response = await fetch('/users/me', {
                    headers: { 'Authorization': `Bearer ${token}` }
                });
                
                if (response.ok) {
                    currentUser = await response.json();
                    console.log('Current user loaded:', currentUser);
                    updateUserInfo(currentUser);
                } else {
                    console.error('Failed to load user:', response.status, response.statusText);
                    throw new Error('Failed to load user data');
                }
            } catch (error) {
                console.error('Error loading user:', error);
                localStorage.removeItem('bhoomitechzone_token');
                showToast('Session expired. Please login again.', 'error');
                setTimeout(() => {
                    window.location.href = '/app/login';
                }, 2000);
                throw error;
            }
        }
        
        function setupEventListeners() {
            console.log('Setting up event listeners...');
            
            // Menu toggle
            document.getElementById('menuToggle')?.addEventListener('click', function() {
                document.querySelector('.sidebar')?.classList.toggle('active');
            });
            
            // User menu
            const userMenu = document.getElementById('userMenu');
            const userDropdown = document.getElementById('userDropdown');
            
            userMenu?.addEventListener('click', function(e) {
                e.stopPropagation();
                userDropdown?.classList.toggle('active');
            });
            
            document.addEventListener('click', function() {
                userDropdown?.classList.remove('active');
            });
            
            // Logout
            document.getElementById('logoutBtn')?.addEventListener('click', function(e) {
                e.preventDefault();
                localStorage.removeItem('bhoomitechzone_token');
                window.location.href = '/app/login';
            });
            
            // Filter controls
            document.getElementById('applyFilters')?.addEventListener('click', applyFilters);
            document.getElementById('resetFilters')?.addEventListener('click', resetFilters);
            document.getElementById('exportReports')?.addEventListener('click', exportReports);
        }
        
        function setDefaultDateRange() {
            const today = new Date();
            const thirtyDaysAgo = new Date(today.getTime() - (30 * 24 * 60 * 60 * 1000));
            
            document.getElementById('endDate').value = today.toISOString().split('T')[0];
            document.getElementById('startDate').value = thirtyDaysAgo.toISOString().split('T')[0];
        }
        
        async function loadTeamMembers() {
            try {
                const token = localStorage.getItem('bhoomitechzone_token');
                
                // Only managers can see team member filter
                if (!isManager()) {
                    document.getElementById('teamMemberFilter').style.display = 'none';
                    return;
                }
                
                const response = await fetch('/api/sales/team-members', {
                    headers: { 'Authorization': `Bearer ${token}` }
                });
                
                if (response.ok) {
                    teamMembers = await response.json();
                    
                    const select = document.getElementById('teamMemberFilter');
                    select.innerHTML = '<option value="">All Team Members</option>';
                    
                    teamMembers.forEach(member => {
                        const option = document.createElement('option');
                        option.value = member.id || member.username;
                        option.textContent = `${member.first_name || ''} ${member.last_name || ''}`.trim() || member.username;
                        select.appendChild(option);
                    });
                }
            } catch (error) {
                console.error('Error loading team members:', error);
            }
        }
        
        async function loadReports() {
            console.log('Loading reports...');
            
            try {
                const token = localStorage.getItem('bhoomitechzone_token');
                const startDate = document.getElementById('startDate').value;
                const endDate = document.getElementById('endDate').value;
                const teamMember = document.getElementById('teamMemberFilter').value;
                
                const params = new URLSearchParams({
                    start_date: startDate,
                    end_date: endDate
                });
                
                if (teamMember && isManager()) {
                    params.append('team_member', teamMember);
                }
                
                console.log('Fetching reports data...');
                const response = await fetch(`/api/sales/reports?${params}`, {
                    headers: { 'Authorization': `Bearer ${token}` }
                });
                
                if (response.ok) {
                    reportData = await response.json();
                    console.log('Reports data loaded:', reportData);
                    renderStats();
                    renderPerformanceChart();
                } else {
                    console.error('Failed to load reports:', response.status, response.statusText);
                    throw new Error('Failed to load reports');
                }
            } catch (error) {
                console.error('Error loading reports:', error);
                showToast('Error loading reports', 'error');
                renderEmptyStats();
            }
        }
        
        async function loadTopPerformers() {
            try {
                const token = localStorage.getItem('bhoomitechzone_token');
                const startDate = document.getElementById('startDate').value;
                const endDate = document.getElementById('endDate').value;
                
                const params = new URLSearchParams({
                    start_date: startDate,
                    end_date: endDate,
                    limit: '5'
                });
                
                const response = await fetch(`/api/sales/top-performers?${params}`, {
                    headers: { 'Authorization': `Bearer ${token}` }
                });
                
                if (response.ok) {
                    const performers = await response.json();
                    renderTopPerformers(performers);
                } else {
                    renderEmptyPerformers();
                }
            } catch (error) {
                console.error('Error loading top performers:', error);
                renderEmptyPerformers();
            }
        }
        
        async function loadLateMembers() {
            try {
                const token = localStorage.getItem('bhoomitechzone_token');
                const today = new Date().toISOString().split('T')[0];
                
                const response = await fetch(`/api/sales/attendance/late?date=${today}`, {
                    headers: { 'Authorization': `Bearer ${token}` }
                });
                
                if (response.ok) {
                    const lateMembers = await response.json();
                    renderLateMembers(lateMembers);
                } else {
                    renderEmptyLateMembers();
                }
            } catch (error) {
                console.error('Error loading late members:', error);
                renderEmptyLateMembers();
            }
        }
        
