        function renderTopPerformers(performers) {
            const container = document.getElementById('topPerformers');
            
            if (!performers || performers.length === 0) {
                renderEmptyPerformers();
                return;
            }
            
            container.innerHTML = performers.map((performer, index) => `
                <div class="performer-item">
                    <div class="performer-info">
                        <div class="performer-avatar">
                            ${getInitials(performer.name || performer.first_name, performer.last_name)}
                        </div>
                        <div class="performer-details">
                            <h4>${performer.name || `${performer.first_name || ''} ${performer.last_name || ''}`.trim() || 'Unknown'}</h4>
                            <p>${performer.department || 'Sales'} ‚Ä¢ Rank #${index + 1}</p>
                        </div>
                    </div>
                    <div class="performer-stats">
                        <div class="performer-value">${formatCurrency(performer.total_revenue || performer.revenue || 0)}</div>
                        <div class="performer-metric">${performer.deals_closed || 0} deals closed</div>
                    </div>
                </div>
            `).join('');
        }
        
        function renderEmptyPerformers() {
            document.getElementById('topPerformers').innerHTML = `
                <div style="text-align: center; padding: 2rem; color: var(--text-secondary);">
                    <div style="font-size: 2rem; margin-bottom: 1rem;">üèÜ</div>
                    <p>No performance data available for the selected period.</p>
                </div>
