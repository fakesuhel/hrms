        function renderEmptyLateMembers() {
            document.getElementById('lateMembers').innerHTML = `
                <div style="text-align: center; padding: 2rem; color: var(--text-secondary);">
                    <div style="font-size: 2rem; margin-bottom: 1rem;">‚úÖ</div>
                    <p>All team members are on time today!</p>
                </div>
            `;
        }
        
        function renderPerformanceChart() {
            const ctx = document.getElementById('performanceChart').getContext('2d');
            
            // Destroy existing chart
            if (performanceChart) {
                performanceChart.destroy();
            }
            
            const chartData = reportData.trends || {};
            const labels = chartData.labels || [];
            const revenueData = chartData.revenue || [];
            const leadsData = chartData.leads || [];
            
            performanceChart = new Chart(ctx, {
                type: 'line',
                data: {
                    labels: labels,
                    datasets: [
                        {
                            label: 'Revenue (‚Çπ)',
                            data: revenueData,
                            borderColor: '#3b82f6',
                            backgroundColor: 'rgba(59, 130, 246, 0.1)',
                            tension: 0.4,
                            yAxisID: 'y'
                        },
                        {
                            label: 'Leads Count',
                            data: leadsData,
                            borderColor: '#10b981',
                            backgroundColor: 'rgba(16, 185, 129, 0.1)',
                            tension: 0.4,
                            yAxisID: 'y1'
                        }
                    ]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'top',
                        }
                    },
                    scales: {
                        y: {
                            type: 'linear',
                            display: true,
                            position: 'left',
                            title: {
                                display: true,
                                text: 'Revenue (‚Çπ)'
                            }
                        },
                        y1: {
                            type: 'linear',
                            display: true,
                            position: 'right',
                            title: {
                                display: true,
                                text: 'Leads Count'
                            },
                            grid: {
                                drawOnChartArea: false,
                            },
                        }
                    }
                }
            });
        }
        
        async function applyFilters() {
            showToast('Applying filters...', 'info');
            
            await Promise.all([
                loadReports(),
                loadTopPerformers(),
                loadLateMembers()
            ]);
            
            showToast('Filters applied successfully', 'success');
        }
        
        function resetFilters() {
            setDefaultDateRange();
            document.getElementById('teamMemberFilter').value = '';
            document.getElementById('amountFilter').value = '';
            
            applyFilters();
        }
        
        function exportReports() {
            try {
                const csvContent = generateAdvancedCSVReport();
                
                const blob = new Blob([csvContent], { type: 'text/csv' });
                const url = window.URL.createObjectURL(blob);
                const a = document.createElement('a');
                a.href = url;
                a.download = `executive_sales_report_${new Date().toISOString().split('T')[0]}.csv`;
                document.body.appendChild(a);
                a.click();
                document.body.removeChild(a);
                window.URL.revokeObjectURL(url);
                
                showToast('Executive report exported successfully', 'success');
            } catch (error) {
                console.error('Error exporting report:', error);
                showToast('Error exporting report', 'error');
            }
        }
        
        function generateAdvancedCSVReport() {
            const headers = [
                'Report Type', 'Metric', 'Value', 'Change (%)', 'Period'
            ];
            
            const stats = reportData.overview || {};
            const period = `${document.getElementById('startDate').value} to ${document.getElementById('endDate').value}`;
            
            const rows = [
                ['Overview', 'Total Leads', stats.total_leads || 0, stats.leads_change || 0, period],
                ['Overview', 'Converted Leads', stats.converted_leads || 0, stats.conversion_change || 0, period],
                ['Overview', 'Total Revenue', stats.total_revenue || 0, stats.revenue_change || 0, period],
                ['Overview', 'Win Rate (%)', (stats.win_rate || 0).toFixed(1), stats.win_rate_change || 0, period],
                ['Overview', 'Average Deal Size', stats.avg_deal_size || 0, stats.deal_size_change || 0, period],
                ['Overview', 'Team Performance (%)', (stats.team_performance || 0).toFixed(1), stats.team_performance_change || 0, period]
            ];
            
            return [headers, ...rows].map(row => row.join(',')).join('\n');
        }
        
        function isManager() {
            if (!currentUser) return false;
            
            // Check role
            if (currentUser.role && ['admin', 'director', 'manager'].includes(currentUser.role)) {
                return true;
            }
            
            // Check position
            if (currentUser.position === 'sales_manager') {
                return true;
            }
            
            return false;
        }
        
        function getInitials(firstName, lastName) {
            if (firstName && lastName) {
                return (firstName.charAt(0) + lastName.charAt(0)).toUpperCase();
            } else if (firstName) {
                return firstName.charAt(0).toUpperCase();
            } else if (lastName) {
                return lastName.charAt(0).toUpperCase();
            }
            return 'U';
        }
        
        function formatCurrency(amount) {
            try {
                return new Intl.NumberFormat('en-IN', {
                    style: 'currency',
                    currency: 'INR',
                    minimumFractionDigits: 0,
                    maximumFractionDigits: 0
                }).format(amount || 0);
            } catch (error) {
                return '‚Çπ' + (amount || 0).toLocaleString();
            }
        }
        
        function showToast(message, type = 'info') {
            const toast = document.createElement('div');
            toast.className = `toast ${type}`;
            toast.textContent = message;
            
            document.body.appendChild(toast);
            
            setTimeout(() => toast.classList.add('show'), 100);
            
            setTimeout(() => {
                toast.classList.remove('show');
                setTimeout(() => {
                    if (document.body.contains(toast)) {
                        document.body.removeChild(toast);
                    }
                }, 300);
            }, 3000);
        }
        
        function updateUserInfo(user) {
            try {
                console.log('Updating user info:', user);
                
                const userInitials = document.getElementById('userInitials');
                const userTimeDisplay = document.getElementById('userTimeDisplay');
                const sidebarUsername = document.getElementById('sidebar-username');
                const sidebarPosition = document.getElementById('sidebar-position');
                
                // Safe fallbacks for user data
                const firstName = user.first_name || '';
                const lastName = user.last_name || '';
                const username = user.username || 'User';
                const department = user.department || 'Sales';
                
                // Generate initials safely
                let initials = getInitials(firstName, lastName) || username.charAt(0).toUpperCase() || 'U';
                
                // Update elements safely
                if (userInitials) userInitials.textContent = initials;
                
                if (userTimeDisplay) {
                    const now = new Date();
                    const timeString = now.toLocaleTimeString('en-US', { 
                        hour12: false, 
                        hour: '2-digit', 
                        minute: '2-digit' 
                    });
                    
                    const displayName = firstName && lastName ? `${firstName} ${lastName}` : username;
                    userTimeDisplay.textContent = `${timeString} - ${displayName}`;
                }
                
                if (sidebarUsername) {
                    sidebarUsername.textContent = firstName && lastName ? `${firstName} ${lastName}` : username;
                }
                
                if (sidebarPosition) {
                    sidebarPosition.textContent = department;
                }
                
                console.log('User info updated successfully');
            } catch (error) {
                console.error('Error updating user info:', error);
            }
        }
    </script>
