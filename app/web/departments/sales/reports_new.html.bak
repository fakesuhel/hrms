    <script>
        // Global variables
        let currentUser = null;
        let reportData = {};
        
        document.addEventListener('DOMContentLoaded', async function() {
            console.log('Reports page loading...');
            
            // Check authentication
            const token = localStorage.getItem('bhoomitechzone_token');
            if (!token) {
                console.log('No token found, redirecting to login');
                window.location.href = '/app/login';
                return;
            }
            
            try {
                // Initialize page
                await initializePage();
                
                // Setup event listeners
                setupEventListeners();
                
                // Load reports
                await loadReports();
                
                console.log('Reports page loaded successfully');
            } catch (error) {
                console.error('Error initializing reports page:', error);
                showToast('Error loading reports page', 'error');
            }
        });
        
        async function initializePage() {
            console.log('Initializing page...');
            
            try {
                // Load current user
                await loadCurrentUser();
                
                console.log('Page initialized successfully');
            } catch (error) {
                console.error('Error initializing page:', error);
                throw error;
            }
        }
        
        async function loadCurrentUser() {
            try {
                console.log('Loading current user...');
                const token = localStorage.getItem('bhoomitechzone_token');
                const response = await fetch('/users/me', {
                    headers: { 'Authorization': `Bearer ${token}` }
                });
                
                if (response.ok) {
                    currentUser = await response.json();
                    console.log('Current user loaded:', currentUser);
                    updateUserInfo(currentUser);
                } else {
                    console.error('Failed to load user:', response.status, response.statusText);
                    throw new Error('Failed to load user data');
                }
            } catch (error) {
                console.error('Error loading user:', error);
                // Clear invalid token and redirect
                localStorage.removeItem('bhoomitechzone_token');
                showToast('Session expired. Please login again.', 'error');
                setTimeout(() => {
                    window.location.href = '/app/login';
                }, 2000);
                throw error;
            }
        }
        
        function setupEventListeners() {
            console.log('Setting up event listeners...');
            
            // Menu toggle
            document.getElementById('menuToggle')?.addEventListener('click', function() {
                document.querySelector('.sidebar')?.classList.toggle('active');
            });
            
            // User menu
            const userMenu = document.getElementById('userMenu');
            const userDropdown = document.getElementById('userDropdown');
            
            userMenu?.addEventListener('click', function(e) {
                e.stopPropagation();
                userDropdown?.classList.toggle('active');
            });
            
            document.addEventListener('click', function() {
                userDropdown?.classList.remove('active');
            });
            
            // Logout
            document.getElementById('logoutBtn')?.addEventListener('click', function(e) {
                e.preventDefault();
                localStorage.removeItem('bhoomitechzone_token');
                window.location.href = '/app/login';
            });
            
            // Report controls
            document.getElementById('refreshReports')?.addEventListener('click', loadReports);
            document.getElementById('exportReports')?.addEventListener('click', exportReports);
        }
        
        async function loadReports() {
            console.log('Loading reports...');
            
            try {
                const token = localStorage.getItem('bhoomitechzone_token');
                
                // Set default date range (last 30 days)
                const today = new Date();
                const endDate = today.toISOString().split('T')[0];
                const startDate = new Date(today.getTime() - (30 * 24 * 60 * 60 * 1000)).toISOString().split('T')[0];
                
                const params = new URLSearchParams({
                    start_date: startDate,
                    end_date: endDate
                });
                
                console.log('Fetching reports data...');
                const response = await fetch(`/api/sales/reports?${params}`, {
                    headers: { 'Authorization': `Bearer ${token}` }
                });
                
                if (response.ok) {
                    reportData = await response.json();
                    console.log('Reports data loaded:', reportData);
                    renderStats();
                    showToast('Reports loaded successfully', 'success');
                } else {
                    console.error('Failed to load reports:', response.status, response.statusText);
                    throw new Error('Failed to load reports');
                }
            } catch (error) {
                console.error('Error loading reports:', error);
                showToast('Error loading reports', 'error');
                
                // Show default empty stats
                renderEmptyStats();
            }
        }
        
        function renderStats() {
            console.log('Rendering stats...');
            
            const statsGrid = document.getElementById('statsGrid');
            const stats = reportData.overview || {};
            
            const statCards = [
                {
                    title: 'Total Leads',
                    value: stats.total_leads || 0,
                    change: stats.leads_change || 0,
                    icon: 'üéØ',
                    color: 'background: rgba(59, 130, 246, 0.1); color: #3b82f6;'
                },
                {
                    title: 'Converted Leads',
                    value: stats.converted_leads || 0,
                    change: stats.conversion_change || 0,
                    icon: '‚úÖ',
                    color: 'background: rgba(16, 185, 129, 0.1); color: #10b981;'
                },
                {
                    title: 'Revenue Generated',
                    value: formatCurrency(stats.total_revenue || 0),
                    change: stats.revenue_change || 0,
                    icon: 'üí∞',
                    color: 'background: rgba(245, 158, 11, 0.1); color: #f59e0b;'
                },
                {
                    title: 'Win Rate',
                    value: `${(stats.win_rate || 0).toFixed(1)}%`,
                    change: stats.win_rate_change || 0,
                    icon: 'üìà',
                    color: 'background: rgba(168, 85, 247, 0.1); color: #a855f7;'
                },
                {
                    title: 'Avg Deal Size',
                    value: formatCurrency(stats.avg_deal_size || 0),
                    change: stats.deal_size_change || 0,
                    icon: 'üíé',
                    color: 'background: rgba(239, 68, 68, 0.1); color: #ef4444;'
                },
                {
                    title: 'Payment Collected',
                    value: formatCurrency(stats.payment_collected || 0),
                    change: stats.payment_change || 0,
                    icon: 'üí≥',
                    color: 'background: rgba(16, 185, 129, 0.1); color: #10b981;'
                }
            ];
            
            statsGrid.innerHTML = statCards.map(stat => `
                <div class="stat-card">
                    <div class="stat-header">
                        <div class="stat-title">${stat.title}</div>
                        <div class="stat-icon" style="${stat.color}">
                            ${stat.icon}
                        </div>
                    </div>
                    <div class="stat-value">${stat.value}</div>
                    <div class="stat-change ${stat.change >= 0 ? 'positive' : 'negative'}">
                        <span>${stat.change >= 0 ? '‚ÜóÔ∏è' : '‚ÜòÔ∏è'}</span>
                        ${Math.abs(stat.change).toFixed(1)}% vs last period
                    </div>
                </div>
            `).join('');
        }
        
        function renderEmptyStats() {
            const statsGrid = document.getElementById('statsGrid');
            
            const emptyCards = [
                { title: 'Total Leads', value: '0', icon: 'üéØ', color: 'background: rgba(59, 130, 246, 0.1); color: #3b82f6;' },
                { title: 'Converted Leads', value: '0', icon: '‚úÖ', color: 'background: rgba(16, 185, 129, 0.1); color: #10b981;' },
                { title: 'Revenue Generated', value: '‚Çπ0', icon: 'üí∞', color: 'background: rgba(245, 158, 11, 0.1); color: #f59e0b;' },
                { title: 'Win Rate', value: '0.0%', icon: 'üìà', color: 'background: rgba(168, 85, 247, 0.1); color: #a855f7;' },
                { title: 'Avg Deal Size', value: '‚Çπ0', icon: 'üíé', color: 'background: rgba(239, 68, 68, 0.1); color: #ef4444;' },
                { title: 'Payment Collected', value: '‚Çπ0', icon: 'üí≥', color: 'background: rgba(16, 185, 129, 0.1); color: #10b981;' }
            ];
            
            statsGrid.innerHTML = emptyCards.map(stat => `
                <div class="stat-card">
                    <div class="stat-header">
                        <div class="stat-title">${stat.title}</div>
                        <div class="stat-icon" style="${stat.color}">
                            ${stat.icon}
                        </div>
                    </div>
                    <div class="stat-value">${stat.value}</div>
                    <div class="stat-change neutral">
                        <span>--</span>
                        No data available
                    </div>
                </div>
            `).join('');
        }
        
        function exportReports() {
            try {
                // Create CSV content
                const csvContent = generateCSVReport();
                
                // Create download link
                const blob = new Blob([csvContent], { type: 'text/csv' });
                const url = window.URL.createObjectURL(blob);
                const a = document.createElement('a');
                a.href = url;
                a.download = `sales_report_${new Date().toISOString().split('T')[0]}.csv`;
                document.body.appendChild(a);
                a.click();
                document.body.removeChild(a);
                window.URL.revokeObjectURL(url);
                
                showToast('Report exported successfully', 'success');
            } catch (error) {
                console.error('Error exporting report:', error);
                showToast('Error exporting report', 'error');
            }
        }
        
        function generateCSVReport() {
            const headers = ['Metric', 'Value'];
            const rows = [
                ['Total Leads', reportData.overview?.total_leads || 0],
                ['Converted Leads', reportData.overview?.converted_leads || 0],
                ['Win Rate (%)', (reportData.overview?.win_rate || 0).toFixed(1)],
                ['Total Revenue', reportData.overview?.total_revenue || 0],
                ['Average Deal Size', reportData.overview?.avg_deal_size || 0],
                ['Payment Collected', reportData.overview?.payment_collected || 0]
            ];
            
            return [headers, ...rows].map(row => row.join(',')).join('\n');
        }
        
        function formatCurrency(amount) {
            try {
                return new Intl.NumberFormat('en-IN', {
                    style: 'currency',
                    currency: 'INR',
                    minimumFractionDigits: 0,
                    maximumFractionDigits: 0
                }).format(amount || 0);
            } catch (error) {
                return '‚Çπ' + (amount || 0).toLocaleString();
            }
        }
        
        function showToast(message, type = 'info') {
            const toast = document.createElement('div');
            toast.className = `toast ${type}`;
            toast.textContent = message;
            
            document.body.appendChild(toast);
            
            setTimeout(() => toast.classList.add('show'), 100);
            
            setTimeout(() => {
                toast.classList.remove('show');
                setTimeout(() => {
                    if (document.body.contains(toast)) {
                        document.body.removeChild(toast);
                    }
                }, 300);
            }, 3000);
        }
        
        function updateUserInfo(user) {
            try {
                console.log('Updating user info:', user);
                
                const userInitials = document.getElementById('userInitials');
                const userTimeDisplay = document.getElementById('userTimeDisplay');
                const sidebarUsername = document.getElementById('sidebar-username');
                const sidebarPosition = document.getElementById('sidebar-position');
                
                // Safe fallbacks for user data
                const firstName = user.first_name || '';
                const lastName = user.last_name || '';
                const username = user.username || 'User';
                const department = user.department || 'Sales';
                
                // Generate initials safely
                let initials = 'U';
                if (firstName && lastName) {
                    initials = firstName.charAt(0).toUpperCase() + lastName.charAt(0).toUpperCase();
                } else if (firstName) {
                    initials = firstName.charAt(0).toUpperCase();
                } else if (username) {
                    initials = username.charAt(0).toUpperCase();
                }
                
                // Update elements safely
                if (userInitials) userInitials.textContent = initials;
                
                if (userTimeDisplay) {
                    const now = new Date();
                    const timeString = now.toLocaleTimeString('en-US', { 
                        hour12: false, 
                        hour: '2-digit', 
                        minute: '2-digit' 
                    });
                    
                    const displayName = firstName && lastName ? `${firstName} ${lastName}` : username;
                    userTimeDisplay.textContent = `${timeString} - ${displayName}`;
                }
                
                if (sidebarUsername) {
                    sidebarUsername.textContent = firstName && lastName ? `${firstName} ${lastName}` : username;
                }
                
                if (sidebarPosition) {
                    sidebarPosition.textContent = department;
                }
                
                console.log('User info updated successfully');
            } catch (error) {
                console.error('Error updating user info:', error);
                // Don't throw error - just log it
            }
        }
    </script>
